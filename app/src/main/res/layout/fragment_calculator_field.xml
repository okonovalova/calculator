<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/result_show_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@id/reset_button_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1 000 000" />

    <TextView
        android:id="@+id/reset_button_textview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="C"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/result_show_textview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_one_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number_two_textview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_show_textview"
        tools:text="1" />

    <TextView
        android:id="@+id/number_two_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number_three_textview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number_one_textview"
        app:layout_constraintTop_toBottomOf="@id/result_show_textview"
        tools:text="2" />

    <TextView
        android:id="@+id/number_three_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/operator_plus_textview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number_two_textview"
        app:layout_constraintTop_toBottomOf="@id/result_show_textview"
        tools:text="3" />

    <TextView
        android:id="@+id/operator_plus_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number_three_textview"
        app:layout_constraintTop_toBottomOf="@id/result_show_textview"
        tools:text="+" />

    <TextView
        android:id="@+id/number_four_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/number_five_textview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_one_textview"
        tools:text="4" />

    <TextView
        android:id="@+id/number_five_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number_six_textview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number_four_textview"
        app:layout_constraintTop_toBottomOf="@id/number_one_textview"
        tools:text="5" />

    <TextView
        android:id="@+id/number_six_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/operator_minus_textview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number_five_textview"
        app:layout_constraintTop_toBottomOf="@id/number_one_textview"
        tools:text="6" />

    <TextView
        android:id="@+id/operator_minus_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number_six_textview"
        app:layout_constraintTop_toBottomOf="@id/number_one_textview"
        tools:text="-" />

    <TextView
        android:id="@+id/number_seven_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number_eight_textview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_four_textview"
        tools:text="7" />

    <TextView
        android:id="@+id/number_eight_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/number_nine_textview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number_seven_textview"
        app:layout_constraintTop_toBottomOf="@id/number_four_textview"
        tools:text="8" />

    <TextView
        android:id="@+id/number_nine_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/operator_multiple_textview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number_eight_textview"
        app:layout_constraintTop_toBottomOf="@id/number_four_textview"
        tools:text="9" />

    <TextView
        android:id="@+id/operator_multiple_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="х"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number_nine_textview"
        app:layout_constraintTop_toBottomOf="@id/number_four_textview"
        tools:text="х" />

    <TextView
        android:id="@+id/point_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="."
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/number_zero_textview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_seven_textview"
        tools:text="." />

    <TextView
        android:id="@+id/number_zero_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/hundred_textview"
        app:layout_constraintStart_toEndOf="@id/point_textview"
        app:layout_constraintTop_toBottomOf="@id/number_seven_textview" />

    <TextView
        android:id="@+id/hundred_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="00"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/operator_divide_textview"
        app:layout_constraintStart_toEndOf="@id/number_zero_textview"
        app:layout_constraintTop_toBottomOf="@id/number_seven_textview" />

    <TextView
        android:id="@+id/operator_divide_textview"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="/"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hundred_textview"
        app:layout_constraintTop_toBottomOf="@id/number_seven_textview"
        tools:text="/" />

    <TextView
        android:id="@+id/calculate_result_button_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="="
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_textview"
        tools:text="=" />

</androidx.constraintlayout.widget.ConstraintLayout>